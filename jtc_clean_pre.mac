			//searchdown "^\\[説明\\]|^説明|^\\([0-9]+\\) ?請求項[0-9]+|^請求項[0-9]+", regular, casesense;
			searchdown "^(\\[|<)説明(\\]|>)|^説明", regular, casesense;			
